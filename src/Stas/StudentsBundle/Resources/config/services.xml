           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="stas.students.service.student.class">Stas\StudentsBundle\Service\StudentService</parameter>
    </parameters>

    <services>
        <service id="stas.students.service.student" class="%stas.students.service.student.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>
    </services>

</container>
